<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#aaadb1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs_477.cs_477_course_project.GameSelection"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Game Selection"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textview1"
            android:layout_marginTop="25dp"
            android:fontFamily="monospace"
            android:text="Category"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:fontFamily="monospace"
            android:text="Difficulty Level"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


        <info.hoang8f.widget.FButton
            android:id="@+id/startGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="serif-monospace"
            android:minHeight="50dp"
            android:minWidth="140dp"
            android:onClick="start_game"
            android:text="Start"
            android:textColor="#f9f9f9"
            android:textStyle="bold"
            fbutton:buttonColor="@color/colorAccent"
            fbutton:shadowEnabled="true"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/difficulty"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textview"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />

        <Spinner
            android:id="@+id/difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />


    </RelativeLayout>


</LinearLayout>